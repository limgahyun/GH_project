<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.project.gh.Threekingdoms.Wei.WeiMapper">
  
	<!-- 위나라 장수 홈 리스트 -->
	<select id="selectWeiGeneral" parameterType="java.util.Map" resultType="com.project.gh.Threekingdoms.Wei.WeiVO">
		SELECT
			adult_name as adult_name
			, name as name
			, explicate as explicate
		FROM 
			wei_general
		LIMIT 
			#{beginRow}
			, #{pagePerRow}
	</select>
	
	<!-- 홈리스트 페이징  -->
	<select id="countWeiList" parameterType="java.util.Map" resultType="Integer">
  			SELECT
  				COUNT(*)
  			FROM
  				wei_general			
  	</select> 
  	
  
  	<!-- 위나라 장수 등록 -->
  	<insert id="insertWeiGeneral" parameterType="com.project.gh.Threekingdoms.Wei.WeiVO">
		INSERT INTO wei_general (
			adult_name
			, name
			, explicate
		) VALUES (
			#{adult_name}
			, #{name}
			, #{explicate}
		)
	</insert>
	
  
  </mapper>
  
  